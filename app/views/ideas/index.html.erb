<h2>All Ideas 🐶 </h2>
  <div class="container"> 
  <div class="row">
  <% @ideas.each do |idea| %>
  <div class="col-sm-12 col-md-6 col-lg-4">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= link_to idea.title, idea_path(idea) %></h5>
      <p class="card-text"><%= idea.description %></p>
  </div>
  </div>
  </div>
  <% end %>
  </div>
  </div>